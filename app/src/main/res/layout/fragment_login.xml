<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#926BCBD8"
    android:layout_height="match_parent">


    <LinearLayout
        android:background="@drawable/button_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/userEmail"
            android:paddingLeft="20dp"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/button_border"
            android:hint="Insert your e-Mail"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/button_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:orientation="vertical"
        android:layout_below="@+id/linearLayout"
        android:layout_alignLeft="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout"
        android:layout_marginTop="13dp">


        <EditText
            android:id="@+id/userPassword"
            android:paddingLeft="20dp"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_below="@+id/linearLayout2"
            android:layout_centerHorizontal="true"
            android:layout_weight="12.09"
            android:background="@drawable/button_border"
            android:hint="Insert your password"
            android:text=""
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

    </LinearLayout>


    <TextView
        android:id="@+id/switchLoginToRegisterLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:text="@string/goToRegistration"
        android:layout_alignParentBottom="true"
        android:gravity="center"/>

    <Button
        android:background="@drawable/bg_button"
        android:text="SIGN IN"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/logButton"
        android:clickable="true"
        android:onClick="isValidUser"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_alignStart="@+id/linearLayout2" />


</RelativeLayout>
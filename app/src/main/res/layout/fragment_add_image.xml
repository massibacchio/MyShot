<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.AddImageFragment"
    android:background="@color/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/textViewFormTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Insert image details"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginBottom="16dp"/>



            <EditText
                android:id="@+id/editTextTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Insert title"/>

            <!-- EditText per inserire la descrizione -->
            <EditText
                android:id="@+id/editTextDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Insert description"/>

            <Button
                android:id="@+id/AddImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick an image from gallery"
                android:layout_gravity="bottom|center_horizontal"
                android:backgroundTint="@color/blue"
                android:textColor="@color/white">

            </Button>


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:maxWidth="200dp"
                android:maxHeight="200dp"/>

            <Button
                android:id="@+id/ConfirmButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm"
                android:layout_gravity="bottom|center_horizontal"
                android:backgroundTint="@color/red"
                android:textColor="@color/white"/>


        </LinearLayout>

    </ScrollView>



</FrameLayout>